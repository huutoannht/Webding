@model IEnumerable<WebApplication1.Models.Album>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row heading-bg">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        @Html.ActionLink("Thêm mới Album", "Create", new { }, new { @class = "btn btn-success" })
    </div>
    <!-- Breadcrumb -->
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <ol class="breadcrumb">
            <li><a href="index.html">Trang chủ</a></li>
            <li><a href="#"><span>table</span></a></li>
            <li class="active"><span>Album</span></li>
        </ol>
    </div>
    <!-- /Breadcrumb -->
</div>
<!-- /Title -->
<!-- Row -->
<div class="col-sm-12">
    <div class="panel panel-default card-view">
        <div class="panel-heading">
            <div class="pull-left">
                <h6 class="panel-title txt-dark"> Danh sách Album</h6>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="panel-wrapper collapse in">
            <div class="panel-body">
                @if (Model.Count() == 0)
                {
                    <div class="alert alert-success alert-dismissable alert-style-1">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <i class="zmdi zmdi-check"></i>Album chưa tạo.
                    </div>
                }
                else
                {
                    <div class="table-wrap">
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered mb-0 data-table">
                                <thead>
                                    <tr>
                                        <th>
                                            Tên Album
                                        </th>
                                        <th>
                                            Ngày tạo
                                        </th>
                                        <th>
                                            Trạng thái
                                        </th>
                                        <th>
                                            Chuyên mục
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AlbumName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedAt)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsDeleted)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CaptureType.CaptureTypeName)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.AlbumID }, new { @class = "btn btn-warning" })
                                                @if (!item.IsDeleted)
                                                {
                                                    <a onclick="deleteRecord('@item.AlbumID','Album')" class="btn btn-danger">Xóa</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>